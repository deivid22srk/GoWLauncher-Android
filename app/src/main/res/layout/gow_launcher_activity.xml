<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_gow_background">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/AppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_theme_gow_surface"
        android:elevation="0dp"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@color/md_theme_gow_surface"
            app:expandedTitleMarginStart="24dp"
            app:expandedTitleMarginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:paddingBottom="32dp"
                app:layout_collapseMode="parallax">

                <ImageButton
                    android:id="@+id/BTBackToMain"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/icon_back"
                    android:tint="@color/md_theme_gow_on_surface_variant"
                    android:contentDescription="Voltar" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âš”ï¸"
                    android:textSize="48sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GOD OF WAR"
                    android:textColor="@color/md_theme_gow_primary"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-black"
                    android:letterSpacing="0.05" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018 Edition"
                    android:textColor="@color/md_theme_gow_on_surface_variant"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="4dp" />

                <View
                    android:layout_width="80dp"
                    android:layout_height="4dp"
                    android:background="@color/md_theme_gow_primary"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="20dp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/md_theme_gow_primary_container"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    android:layout_marginTop="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="ðŸ“"
                            android:textSize="32sp"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Selecione o executÃ¡vel GoW.exe do seu jogo"
                            android:textColor="@color/md_theme_gow_on_primary_container"
                            android:textSize="15sp"
                            android:lineSpacingExtra="4dp"
                            android:layout_marginStart="12dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/Toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:title=" " />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/md_theme_gow_surface_container"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                android:layout_margin="16dp"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/icon_open"
                            android:tint="@color/md_theme_gow_tertiary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="LOCALIZAÃ‡ÃƒO ATUAL"
                            android:textColor="@color/md_theme_gow_tertiary"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:letterSpacing="0.1"
                            android:layout_marginStart="12dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/BTUpDir"
                            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Voltar"
                            android:textColor="@color/md_theme_gow_primary"
                            app:icon="@android:drawable/ic_menu_revert"
                            app:iconTint="@color/md_theme_gow_primary"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:paddingStart="12dp"
                            android:paddingEnd="16dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/md_theme_gow_outline_variant"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/TVCurrentPath"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="/storage/emulated/0"
                        android:textColor="@color/md_theme_gow_on_surface"
                        android:textSize="14sp"
                        android:fontFamily="monospace"
                        android:ellipsize="start"
                        android:singleLine="true"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RecyclerViewFiles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp"
                android:clipToPadding="false" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/md_theme_gow_surface"
        app:cardElevation="16dp"
        app:cardCornerRadius="0dp"
        android:layout_gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:paddingTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_wine"
                    android:tint="@color/md_theme_gow_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ARQUIVO SELECIONADO"
                    android:textColor="@color/md_theme_gow_on_surface_variant"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.15"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/TVSelectedFile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nenhum arquivo selecionado"
                android:textColor="@color/md_theme_gow_on_surface"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="16dp"
                android:ellipsize="middle"
                android:singleLine="true"
                android:paddingStart="4dp"
                android:paddingEnd="4dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/BTStartGame"
                style="@style/Widget.GoW.Button.Primary"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="âš™ï¸ CONFIGURAR E INICIAR"
                android:textSize="16sp"
                android:enabled="false"
                app:icon="@drawable/icon_settings"
                app:iconGravity="textStart"
                app:iconSize="24dp"
                app:iconTint="@color/md_theme_gow_on_primary" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <FrameLayout
        android:id="@+id/LoadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CC000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/md_theme_gow_surface_container_high"
            app:cardCornerRadius="24dp"
            app:cardElevation="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp"
                android:gravity="center">

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:indeterminate="true"
                    app:indicatorColor="@color/md_theme_gow_primary"
                    app:trackColor="@color/md_theme_gow_surface_container"
                    app:trackThickness="6dp" />

                <TextView
                    android:id="@+id/TVLoadingMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Installing System Files"
                    android:textColor="@color/md_theme_gow_on_surface"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aguarde enquanto configuramos o ambiente"
                    android:textColor="@color/md_theme_gow_on_surface_variant"
                    android:textSize="13sp"
                    android:layout_marginTop="8dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
