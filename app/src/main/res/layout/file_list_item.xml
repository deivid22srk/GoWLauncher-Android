<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/md_theme_gow_surface_container"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    android:layout_marginBottom="8dp"
    app:strokeWidth="0dp"
    app:rippleColor="@color/md_theme_gow_primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="52dp"
            android:layout_height="52dp"
            app:cardBackgroundColor="@color/md_theme_gow_surface_container_high"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/IVIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/icon_folder"
                android:tint="@color/md_theme_gow_tertiary"
                android:padding="12dp"
                android:scaleType="fitCenter" />

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/TVFileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FolderName"
                android:textSize="16sp"
                android:textColor="@color/md_theme_gow_on_surface"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/TVFileDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 items"
                android:textSize="13sp"
                android:textColor="@color/md_theme_gow_on_surface_variant"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

        <ImageView
            android:id="@+id/IVChevron"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_back"
            android:tint="@color/md_theme_gow_outline"
            android:rotation="180"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
