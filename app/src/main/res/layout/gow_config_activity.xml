<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Configurações do God of War"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:textColor="?android:attr/textColorPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Personalize as configurações antes de iniciar o jogo"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginBottom="32dp"
            android:textColor="?android:attr/textColorSecondary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Driver Gráfico Turnip/Wrapper"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:textColor="?android:attr/textColorPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Versão do driver Turnip Mesa para Vulkan"
            android:textSize="12sp"
            android:layout_marginBottom="8dp"
            android:textColor="?android:attr/textColorSecondary" />

        <Spinner
            android:id="@+id/SpinnerTurnip"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="24dp"
            android:background="@android:drawable/btn_dropdown"
            android:padding="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DXVK (DirectX to Vulkan)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:textColor="?android:attr/textColorPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Versão do DXVK para traduzir DirectX 9/10/11 para Vulkan"
            android:textSize="12sp"
            android:layout_marginBottom="8dp"
            android:textColor="?android:attr/textColorSecondary" />

        <Spinner
            android:id="@+id/SpinnerDXVK"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="24dp"
            android:background="@android:drawable/btn_dropdown"
            android:padding="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FEXCore (Emulador x86_64)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:textColor="?android:attr/textColorPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Versão do FEXCore (vazio = usar padrão incluído)"
            android:textSize="12sp"
            android:layout_marginBottom="8dp"
            android:textColor="?android:attr/textColorSecondary" />

        <Spinner
            android:id="@+id/SpinnerFEXCore"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="32dp"
            android:background="@android:drawable/btn_dropdown"
            android:padding="12dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/dividerHorizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Configurações Aplicadas:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="?android:attr/textColorPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Wine/Proton: 9.0 ARM64EC\n• VKD3D: None (DirectX 12)\n• Emulador: FEXCore\n• Resolução: 1920x1080\n• Vulkan: 1.3"
            android:textSize="13sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="32dp"
            android:textColor="?android:attr/textColorSecondary" />

        <Button
            android:id="@+id/BTStartGame"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="INICIAR GOD OF WAR"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@color/colorAccent"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</ScrollView>
